class UniqueName:
    def __init__(self):
        self.contexts = {}

    def name(self,context):
        if context in self.contexts.keys():
            self.contexts[context] += 1
            return context+"_" + self.contexts[contexts];
        else:
            self.contexts[context] = 1
            return context+"_1"

test = UniqueName()
print (test.name('sc'))
print (test.name('sc'))
print (test.name('sc'))