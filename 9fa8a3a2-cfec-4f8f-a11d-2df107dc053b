(fun a 
	(line 
		(seq 0 7)
		(index (.1 .10 .2 .3 .4 .05 6 7)
		(rv 0 7))))

(fun b
	(index (1 (line (seq 1 100) (ch .1 .2 .3)) 2 (rv 1 330) 4 5 6 70)
		(rv a a)))

(fun pitch
	(index (list b b b b b b)
		(rv a a)))

(fun pan
	(index (list -1 -.5 -.1 0 .1 .5 1)
		(rv a a)))

(step-pan-gen 
(seq -1 1)
pitch
pan
)